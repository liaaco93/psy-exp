html
    head
        link(href="/static/css/semantic.css" rel="stylesheet" type="text/css")
        style(type="text/css")
    body
        table.ui.table.segment#userTable(eid="#{eid}")
            thead
                tr
                    th UID
                    th E-Mail
                    th Status
                tr: form()#invOne
                    th: input(type="text" value="uid" name="uid")
                    th
                    th: input(type="submit" value="Invite User")
                    td#resultInvOne
                tr: form()#addUsr
                    th: input(type="text" value="uid" name="uid")
                    th: input(type="text" value="e-mail" name="email")
                    th: input(type="submit" value="Add User")
                    td#resultAddUsr
                tr: form()#invAll
                    th
                    th
                    th: input(type="submit" value="Invite All")
                    td#resultInvAll
            tbody#userData

        script(src="http://code.jquery.com/jquery-1.11.1.min.js")
        script(src="/static/js/semantic.js")
        script(src="/static/js/admin-gui-usertable.js")